<?xml version='1.0'?>
<parameters>
	<param name="alias-separator" value="-" description="This is a seperator." />
	<param name="deployment_package_id" value="AUTO-GENERATED VALUE"/>
	<param name="content_management_token" value="cm"/>
	<param name="content_delivery_token" value="cd"/>
	<param name="auth-cookie-domain" value="{host-name-suffix}" />
	<param name="cms_databases_prefix" value="{project-name}-{environment_suffix}"/>

	<!--  Cms web site  -->
	<param name="cms-apppool-name" value="{cms-cm-hostname}" />
	<param name="cms-apppool-identity-type" value="{composer_apppool_identitytype}" />
	<param name="cms-apppool-username" value="{composer_apppool_username}" />
	<param name="cms-apppool-password" value="{composer_apppool_password}" />
	
	<!-- Make sure that version exists here https://github.com/Orckestra/C1-CMS-Foundation/releases/download/v$(cms-c1-version)/C1.CMS.$(cms-c1-version).zip -->
	<param name="cms-c1-version" value="6.5" />
	<param name="cms-c1-default-culture" value="en-CA" />
	<param name="cms-c1-all-cultures" value="en-CA,fr-CA" />
	<param name="cms-c1-conslole-login" value="admin" />
	<param name="cms-c1-console-password" value="123456" />
	<param name="cms-c1-custom-packages" value="Orckestra.Search.KeywordRedirect,Orckestra.Search.LuceneNET" />
	
	<!-- SSL -->
	<param name="SSL_CertificateName" value="{ssl-certificate-name}" />
	<param name="SSL_CertificatePath" value="{ssl-certificate-path}" />
	<param name="SSL_CertificateThumbprint" value="{ssl-certificate-thumbprint}" />
	<param name="SSL_CertificatePfxPassword" value="{ssl-certificate-pfx-password}" />
	
  
  <!-- OCS -->  
  <param name="ocs_acronym" value="ocs"/>
  <param name="ocs-cm-alias" value="{project-name}{alias-separator}{alias-separator}{content_management_token}{alias-separator}{environment_suffix}"/>
  <param name="ocs-cm-hostName" value="{ocs-cm-alias}.{host-name-suffix}"/>  
  <param name="ocs-cd-alias" value="{project-name}{alias-separator}{alias-separator}{content_delivery_token}{alias-separator}{environment_suffix}"/>
  <param name="ocs-cd-hostName" value="{ocs-cd-alias}.{host-name-suffix}"/>
  <param name="ocsAuthToken" value="ENTER_VALUE_HERE"/>

</parameters>