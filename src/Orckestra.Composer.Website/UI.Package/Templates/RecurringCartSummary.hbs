{{#if_neq InvalidLineItemCount 0}}
<div class="card bg-light mt-3">
    <div class="card-header  clearfix">
        <div class="cart-header-title  float-left">
            <h3 class="m-0">{{localize 'ShoppingCart' 'T_UnavailableItems'}}</h3>
        </div>
    </div>
    <div class="card-body">

        <div class="alert alert-danger">
            <div class="multiline-message  text-danger">
                <span class="fa  fa-exclamation-triangle  multiline-message-icon"></span>
                <span>{{InvalidLineItemCount}} {{localize 'ShoppingCart' 'L_NoMoreAvailable'}}</span>
            </div>
        </div>

        {{>RecurringLineItemDetail}}
    </div>
</div>
{{/if_neq}}

{{#if_neq InvalidLineItemCount LineItemCount}}
<div class="card bg-light mt-3">
    <div class="card-header  clearfix">
        <div class="cart-header-title  float-left">
            <h3 class="m-0">{{localize 'RecurringCart' 'T_RecurringCartDetailsLineItems'}}</h3>
        </div>
        <div class="cart-header-labels  float-left">
            <div class="cart-header-price  text-right  float-left  d-none d-sm-block">{{localize 'MyAccount' 'L_UnitPrice'}}</div>

            <div class="cart-header-qty  text-center  float-left  d-none d-sm-block">{{localize 'MyAccount' 'L_Quantity'}}</div>

            <div class="cart-header-subtotal  text-right  float-left  d-none d-sm-block">{{localize 'MyAccount' 'L_Subtotal'}}</div>
        </div>
    </div>
    <div class="card-body">
        {{>RecurringLineItemDetail}}
    </div>
</div>
{{/if_neq}}
