<div data-templateid="ReturningCustomerFormsServerValidations">
    {{#if_neq Status ''}}
    <div class="alert alert-danger">
        <div class="multiline-message  text-danger">
            <span class="fa  fa-times-circle-o  fa-lg  multiline-message-icon"></span>&#32;
            {{#if_eq Status 'RequiresApproval'}}
                <span>{{localize 'MyAccount' 'L_SignInErrorRequiresApproval'}}</span>
            {{else}}{{#if_eq Status 'AjaxFailed'}}
                <span>{{localize 'General' 'L_ErrorAjaxFailed'}}</span>
            {{else}}{{#if_eq Status 'InvalidCredentials'}}
                <span>{{localize 'MyAccount' 'L_SignInErrorInvalidCredentials'}}</span>
            {{else}}{{#if_eq Status 'UserLockedDown'}}
                {{#if_neq AccountLockedDownUntil ''}}
                <span>{{localizeFormat 'MyAccount' 'L_SignInErrorUserLockedDown' AccountLockedDownUntil}}</span>
                 {{/if_neq}}
            {{/if_eq}}{{/if_eq}}{{/if_eq}}{{/if_eq}}
        </div>
    </div>
    {{/if_neq}}
</div>