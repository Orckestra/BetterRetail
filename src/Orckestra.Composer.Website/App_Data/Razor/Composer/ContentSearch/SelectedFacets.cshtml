@inherits RazorFunction
@using Orckestra.Composer.ContentSearch.ViewModels

@functions {
    [FunctionParameter(Label = "", Help = "")]
    public ContentSearchViewModel Results { get; set; }
}

@{
    if(Results.SelectedFacets == null)
    {
        return;
    }
}

<html xmlns="http://www.w3.org/1999/xhtml" xmlns:f="http://www.composite.net/ns/function/1.0">
<head>
</head>
<body>
    <div class="card facets-card  mb-3">
        <div class="card-body">
            <h5>@Html.Localize("List-Search", "L_Selection")</h5>
            <ul class="list-group m-0">
                @foreach (var facet in Results.SelectedFacets)
                {
                    foreach (var hit in facet.Hits)
                    {
                        <li class="list-group-item d-flex justify-content-between align-items-center p-0 mb-1 border-0">
                            @hit.Label
                            <span class="badge">
                                <a href="javascript://" onclick="removeSelection('@(hit.Key)')">
                                    <span class="fa  fa-times  fa-lg"></span>
                                </a>
                            </span>
                        </li>
                    }
                }
            </ul>
        </div>
    </div>
</body>
</html>

