@inherits RazorPageTemplate
@using System.Globalization
			  
@functions {
	public override void Configure()
	{
		TemplateId = new Guid("f953fa1e-31fe-4f15-8967-9827caffb68b");
		TemplateTitle = "Category Page Layout";
		Layout = "MasterLayout.cshtml";
	}
	
    [Placeholder(Id="pageHeader", Title="Page Header")]
    public XhtmlDocument PageHeader { get; set; }

	[Placeholder(Id="body", Title="Body", IsDefault=true)]
	public XhtmlDocument Body { get; set; }
}
<html xmlns="http://www.w3.org/1999/xhtml">
	<head>
		@Markup(PageHeader)
	</head>
    <body>
        @Function("Composer.Header")
        <div class="container-md">
            @this.Function("Composer.Header.Breadcrumb")
        </div>
        @Function("Composer.BrowsingCategories.Summary")
        <div class="container-md">
            @Markup(Body)
        </div>
        @Function("Composer.Footer")
    </body>
</html>
