@using Orckestra.Composer.CompositeC1.Context
@using Orckestra.Composer.ViewModels

@inherits Composer.Razor.ComposerRazorFunction


@functions {
    public IProductContext ProductContext { get; set; }
}

@{

    var vm = new PageHeaderViewModel()
    {
        PageTitle = ProductContext.ViewModel.DisplayName,
        MetaDescription = ProductContext.ViewModel.Description,
        CanonicalUrl = string.Format("{0}{1}", Request.Url.GetLeftPart(UriPartial.Authority), ProductContext.ViewModel.ProductDetailUrl)
    };
}

<html xmlns="http://www.w3.org/1999/xhtml" xmlns:f="http://www.composite.net/ns/function/1.0">
<head>
</head>
<body>
    @Partial("PageHeader", vm)
</body>
</html>
