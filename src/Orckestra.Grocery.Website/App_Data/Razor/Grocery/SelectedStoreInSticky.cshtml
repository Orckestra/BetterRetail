@inherits Composer.Razor.ComposerRazorFunction
@functions {
    public override string FunctionDescription
    {
        get { return "Selected Store In Sticky Menu"; }
    }
}

<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:f="http://www.composite.net/ns/function/1.0"
      xmlns:v-bind="v-bind" xmlns:v-on="v-on">
<head>
</head>
<body>
    <li id="vueSelectedStoreInSticky"
        class="ml-auto d-none d-lg-inline sticky-show nav-item"  v-bind:class="{ dropdown: Store }"
        v-cloak="v-cloak" role="none">
        <div v-if="!Store">
            @if (CurrentPageNode.Id != HomePageNode.Id)
            {
                <a class="nav-link" href="#" v-on:click.prevent="changeStoreModal($event, 'store')" role="menuitem">
                    @StoreHelpers.StoreIcon(false)
                </a>
            }
            else
            {
                <a class="nav-link" href="#" v-on:click.prevent="navigateToStoreSelector" role="menuitem">
                    @StoreHelpers.StoreIcon(false)
                </a>
            }
        </div>
        <div v-else="v-else">
            <a class="nav-link" data-toggle="dropdown" role="menuitem">
                @StoreHelpers.StoreIcon(false)
            </a>
            <div class="dropdown-menu selected-store-header p-3">
                @Forms.Validations.ShowError("Errors.TimeSlotSelectionError")
                <div v-if="Store">
                    @StoreHelpers.SelectedFulfillmentMethod()
                    @StoreHelpers.SelectedStorePreview("SelectedFulfillment")
                    <hr />
                    @StoreHelpers.SelectedTimeSlotPreview("SelectedFulfillment")
                </div>
            </div>
        </div>
    </li>
</body>
</html>