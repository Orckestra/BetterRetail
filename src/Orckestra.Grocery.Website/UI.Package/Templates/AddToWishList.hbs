<span data-templateid="AddToWishList">
    {{#if Loaded}}
        {{#if IsInWishList}}
            <a data-qa="product-remove-from-wishlist"
               data-oc-click="removeLineItemToWishList"
               data-id="{{Id}}"
               class="add-to-wishlist active">
                <i class="fa fa-2x fa-heart" aria-hidden="true"></i>
                <span class="sr-only">{{localize 'MyAccount' 'H_RemoveFromTheWishList'}}</span>
        </a>
        {{else}}
            <a data-qa="product-add-to-wishlist"
               data-oc-click="addLineItemToWishList"
               class="add-to-wishlist">
                <i class="fa fa-2x fa-heart-o" aria-hidden="true"></i>
                <span class="sr-only">{{localize 'MyAccount' 'H_AddToWishList'}}</span>
        </a>
        {{/if}}
    {{/if}}
</span>
