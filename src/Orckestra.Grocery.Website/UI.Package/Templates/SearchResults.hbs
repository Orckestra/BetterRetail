<div class="search-results" data-oc-controller="Product.SearchResults" data-context="{{JsonContext}}">
    {{#if ProductSearchResults.TotalCount}}
    {{#if_gt ProductSearchResults.TotalCount 0 }}
        <!--Devrait mettre Ã§a dans le facet.hbs-->
        <div class="row  island  btn-group-responsive">
            <div class="col-6  d-block  d-lg-none">
                <button type="button" class="btn   btn-outline-secondary" data-toggle="collapse"  data-target="#facets" aria-expanded="false">{{localize 'List-Search' 'B_Refine'}}&#160;
                    <span class="fa  fa-angle-down"></span>
                </button>
            </div>
            {{#with ProductSearchResults}}
            <div class="col-6  col-lg-5">
                 {{> SearchSortBy}}
            </div>
            <div class="col-lg-6  col-lg-7  d-none d-lg-block">
                <div class="float-right">
                    {{> PaginationDropDown}}
                </div>
            </div>
            {{/with}}
            <div class="col-12  col-md-6  d-block  d-lg-none">
                {{> SearchFacetsDropdown}}
            </div>
        </div>

        <!-- Search results -->
        {{#with ProductSearchResults}}
        <div class="row">
            {{#each SearchResults}}
            <div class="col-6  col-md-4  col-xl-3"  data-qa="search-results">
                {{> SearchProductResult}}
            </div>
            {{/each}}
            <div class="col-12">
                  {{> Pager}}
            </div>
        </div>
        {{/with}}

        <!--Product quick view-->
        <div>
            {{> ProductQuickViewDataBlade}}
        </div>
    {{/if_gt}}
    {{/if}}
</div>
