{{#if Quantity}}
<div data-templateid='ProductQuantity'>
    {{#with Quantity}}

    <div class="input-group text-center">
        <div class="input-group-prepend">
            <button class="btn   btn-outline-secondary" 
                {{#if_eq ../Disabled false}} 
                    {{#if_eq Value Min}}
                        disabled="disabled" 
                    {{else}} 
                     data-oc-click="decrementQuantity" 
                    {{/if_eq}} {{else}} 
                        disabled="disabled"
                   {{/if_eq}} 
                   data-qa="product-quantity-decrease">
                <span class="fa  fa-minus"></span>
            </button>
        </div>

        <input class="form-control  text-center  border-primary" name="product-quantity" type="text"
            data-qa="product-quantity" 
            data-quantity="{{Value}}" 
            data-quantity-min="{{Min}}" 
            data-quantity-max="{{Max}}"
            data-oc-change="changeQuantity" 
            value="{{Value}}" {{#if ../Disabled}} disabled="disabled" {{/if}} />

        <div class="input-group-append">
            <button class="btn   btn-outline-secondary" 
                {{#if_eq ../Disabled false}} 
                {{#if_eq Value Max}}
                    disabled="disabled" 
                {{else}} 
                    data-oc-click="incrementQuantity" 
                    {{/if_eq}} 
                    {{else}} 
                    disabled="disabled"
                {{/if_eq}} 
                data-qa="product-quantity-increase">
                <span class="fa  fa-plus"></span>
            </button>
        </div>
    </div>

    {{/with}}
</div>
{{/if}}