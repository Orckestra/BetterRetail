<div class="col-6">
    <div class="product-tile" data-has-variants="{{HasVariants}}" data-product-id="{{ProductId}}" data-product-variant-id="{{VariantId}}" data-price="{{Price}}" data-recurringorderprogramname='{{RecurringOrderProgramName}}'>
        <a class="product-tile-media" href="{{Url}}" data-productId="{{ProductId}}" data-index='{{@index}}' data-recurringorderprogramname='{{RecurringOrderProgramName}}' data-oc-click='relatedProductsClick'>
            <img class="img-fluid" src="{{ImageUrl}}" alt="" onerror="this.onerror=null; this.src='{{FallbackImageUrl}}'" />
        </a>

        <div class="product-tile-text">
            <div class="row">
                <div class="col-9 col-md-10">
                    {{#if Brand}}
                        <strong class="text-uppercase  product-tile-brand" data-qa="search-product-brand" title="{{Brand}}">{{Brand}}</strong>
                        <br/>
                    {{/if}}
                    <a data-qa="search-product-title" href="{{Url}}" data-productId="{{ProductId}}" data-index='{{@index}}' data-oc-click='relatedProductsClick'>
                        {{DisplayName}}
                    </a>
                </div>
                {{#if IsRecurringOrderEligible}}
                    <div class="col-3 col-md-2 product-tile-recurring">
                        <img src="/UI.Package/Images/recurring.svg" class="recurring-icon" alt="{{localize 'General' 'L_RecurringProduct'}}" title="{{localize 'General' 'L_RecurringProduct'}}" />
                    </div>
                {{/if}}
            </div>
        </div>
        {{#if DisplayPrices}}
            <div class="product-tile-special-price">
                {{#if IsOnSale}}
                    <del>{{DisplayPrice}}</del>
                {{/if}}
            </div>

            <div class="product-tile-price">
                {{#if IsOnSale }}
                    <span class="h4  text-danger" data-qa="search-product-price">{{DisplaySpecialPrice}}</span>
                {{else}}
                    <span class="h4" data-qa="search-product-price">{{DisplayPrice}}</span>
                {{/if}}
            </div>
        {{/if}}

        {{#if DisplayAddToCart}}
            {{> AddToCartSearch}}
        {{/if}}
    </div>
</div>
