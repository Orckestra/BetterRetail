<div data-templateid="ForgotPasswordFormsServerValidations">
    {{#if_neq Status ''}}
    <div class="alert alert-danger">
        <div class="multiline-message  text-danger">
            <span class="fa  fa-times-circle-o  fa-lg  multiline-message-icon"></span>&#32;
            {{#if_eq Status 'InvalidEmail'}}
                <span>{{localize 'MyAccount' 'L_ForgotPasswordErrorInvalidEmail'}}</span>
            {{else}}{{#if_eq Status 'AjaxFailed'}}
                <span>{{localize 'General' 'L_ErrorAjaxFailed'}}</span>
            {{else}}
                <span>{{localize 'MyAccount' 'L_ForgotPasswordError'}}</span>
            {{/if_eq}}{{/if_eq}}
        </div>
    </div>
    {{/if_neq}}
</div>
