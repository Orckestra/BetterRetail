<div data-templateid="RelatedProducts" class="row">
    {{#if Products}}
        <div class="col-lg-10 offset-lg-1" style="{{BackgroundStyle}}">
            <hr />
            <h2>{{HeadingComponentText}}</h2>
            <div class="row">
                <div class="col-12">
                    <div class="slick-carousel">
                        <div class="js-slick-carousel" data-slick='{"slidesToShow": 4, "slidesToScroll": 4, "mobileCarousel": true}' >
                            {{#each Products}}
                                {{> RelatedProduct}}
                            {{/each}}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    {{/if}}
</div>
