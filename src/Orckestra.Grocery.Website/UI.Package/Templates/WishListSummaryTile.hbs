<div class="wishlist-tile  island-xl">
    <div class="row">
        <div class="col-4 col-md-12">
            <a class="wishlist-tile-media" href="{{ProductUrl}}">
                <img class="img-fluid" src="{{ImageUrl}}" alt="{{ProductSummary.DisplayName}}" onerror="this.onerror=null; this.src='{{FallbackImageUrl}}'" />
            </a>
            <div class="wishlist-tile-delete d-none d-sm-block">
                <button type="button" title="{{localize 'MyAccount' 'H_RemoveFromTheWishList'}}" class="btn   btn-outline-secondary" data-lineitemid="{{Id}}" data-oc-click="deleteLineItem" data-qa="wishlist-product-delete"><span class="fa  fa-times  fa-lg"></span></button>
            </div>
        </div>
        <div class="col-6 col-md-12">
            <div class="wishlist-tile-text">
                <div class="row">
                    <div class="col-9 col-md-10">
                        {{#if ProductSummary.Brand}}
                            <strong class="text-uppercase  product-tile-brand" data-qa="wishlist-product-brand" title="{{ProductSummary.Brand}}">{{ProductSummary.Brand}}</strong>
                            <br/>
                        {{/if}}
                        <a data-qa="wishlist-product-title" href="{{ProductUrl}}" title="{{ProductSummary.DisplayName}}" data-productId="{{ProductId}}">{{ProductSummary.DisplayName}}</a>
                    </div>
                    {{#if RecurringOrderProgramName}}
                        <div class="col-3 col-md-2 product-tile-recurring">
                            <img src="/UI.Package/Images/recurring.svg" class="recurring-icon" alt="{{localize 'General' 'L_RecurringProduct'}}" title="{{localize 'General' 'L_RecurringProduct'}}" />
                        </div>
                    {{/if}}
                </div>
            </div>
            <div class="wishlist-tile-variants">
                {{#if VariantId}} {{#each KeyVariantAttributesList}} {{#if_neq @index 0}}|{{/if_neq}} {{Value}} {{/each}} {{/if}}
            </div>
            {{#if IsOnSale}}
            <div class="wishlist-tile-special-price">
                <del>{{DefaultListPrice}}</del>
            </div>
            <div class="wishlist-tile-price">
                <span class="h4  text-danger">{{ListPrice}}</span>
            </div>
            {{else}}
            <div class="wishlist-tile-special-price">
                <!--only used for proper spacing-->
            </div>
            <div class="wishlist-tile-price">
                <span class="h4">{{DefaultListPrice}}</span>
            </div>
            {{/if}} 
            <div class="wishlist-tile-add-to-cart">
                {{> AddToCartWishList}}
            </div>
            
        </div>
        <div class="col-2 col-md-12 d-block d-sm-none">
            <div class="wishlist-tile-delete">
                <button type="button" title="{{localize 'MyAccount' 'H_RemoveFromTheWishList'}}" class="btn   btn-outline-secondary" data-lineitemid="{{Id}}" data-oc-click="deleteLineItem" data-qa="wishlist-product-delete"><span class="fa  fa-times  fa-lg"></span></button>
            </div>
        </div>
    </div>
</div>
