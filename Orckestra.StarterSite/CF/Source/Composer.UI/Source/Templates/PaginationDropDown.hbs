{{#with Pagination}}
<nav class="pagination-dropdown  form-inline" role="navigation" aria-label="Pagination">
    <div class="form-group">
        <ul class="pager" role="presentation">
            <li class="previous  {{#unless PreviousPage.Url}}disabled{{/unless}}">
                 {{#if PreviousPage.Url}}
                    <a href="{{PreviousPage.Url}}" aria-label="{{localize 'List-Search' 'L_GoToPreviousPage'}}"><i class="fa  fa-arrow-circle-left" aria-hidden="true"></i>&#160;{{PreviousPage.DisplayName}}</a>
                 {{else}}
                    <span data-qa="search-pagination-previous">
                        <i class="fa  fa-arrow-circle-left" aria-hidden="true"></i>&#160;{{PreviousPage.DisplayName}}
                    </span>
                 {{/if}}
                &#160;
            </li>
        </ul>
    </div>
    <div class="form-group">
       <select class="form-control" data-oc-change="pagerPageChanged" aria-label="{{localize 'List-Search' 'L_CurrentPage'}}">
            {{#each Pages}}
                 <option {{#if IsCurrentPage}}selected="selected"{{/if}} value="{{UrlPath}}">{{localize 'List-Search' 'L_PageInDropDown'}}&#160;{{DisplayName}}</option>
             {{/each}}
       </select> 
       &#160;{{localizeFormat 'List-Search' 'L_PageOfTotalItems' TotalNumberOfPages}}&#160;
    </div>
    <div class="form-group">
        <ul class="pager" role="presentation">
            <li class="next  {{#unless NextPage.Url}}disabled{{/unless}}">
                {{#if NextPage.Url}}
                    <a href="{{NextPage.Url}}" aria-label="{{localize 'List-Search' 'L_GoToNextPage'}}">{{NextPage.DisplayName}}&#160;<i class="fa  fa-arrow-circle-right" aria-hidden="true"></i></a>
                 {{else}}
                    <span data-qa="search-pagination-next">
                        {{NextPage.DisplayName}}&#160;<i class="fa  fa-arrow-circle-right" aria-hidden="true"></i>
                    </span>
                 {{/if}}
            </li>
         </ul>
    </div>
</nav>
{{/with}}